{% extends 'base.html.twig' %}

{% block title %} Bands {% endblock %}

{% block body %}
    <div class="container">
        <div class="my-2 text-center">
            <h1>Bands</h1>
        </div>
        <div>
            <div class="w-100 d-flex justify-content-start row g-4 m-auto py-3">
                {% for band in bands %}
                    <div class="col-xl-4  col-lg-6 col-sm-12">
                        <div class="card h-100 border">
                            <div class="card-header text-center">
                                <h2>{{ band.name }}</h2>
                            </div>
                            <div class="card-body">
                                {% if band.picture is not null %}
                                    <img src="{{ band.picture.url }}" width="100%"
                                         alt="{{ band.picture.alternativeName }}">
                                {% endif %}
                                {% if band.style is not null %}
                                    <div>
                                        Style : {{ band.style }}
                                    </div>
                                {% endif %}
                            </div>
                            <div class="card-footer">
                                <a href="{{ path('band_show', {"urlName": (band.urlName) }) }}">Learn more</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}