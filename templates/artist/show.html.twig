{% extends 'base.html.twig' %}

{% block title %}Artist{% endblock %}

{% block body %}

    <div class="container">

        <div class="my-2 text-center">
            <h1>{{ artist.name }}</h1>
        </div>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ artist.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ artist.name }}</td>
            </tr>
            <tr>
                <th>Job</th>
                <td>{{ artist.job }}</td>
            </tr>
            <tr>
                <th>Birthday</th>
                <td>{{ artist.birthday ? artist.birthday|date('Y-m-d') : '' }}</td>
            </tr>
            </tbody>
        </table>
    </div>
{% endblock %}
