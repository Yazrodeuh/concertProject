{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="container my-5">
        <div class="text-center my-3">
            <h1>User</h1>
        </div>

        <table class="table">
            <tbody>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            </tbody>
        </table>
        <div class="text-center my-3">
            <a class="btn btn-primary" href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
        </div>
    </div>


{% endblock %}
